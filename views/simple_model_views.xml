<odoo>
    <!-- ① Glavni (root) meni na gornjoj traci -->
    <menuitem
        id="menu_simple_root"
        name="Simple Module"
        sequence="15"
        web_icon="simple_module,static/description/icon.png"/>

    <!-- ② Window action koji otvara list/form pogled -->
    <record id="action_simple_model" model="ir.actions.act_window">
        <field name="name">Simple Records</field>
        <field name="res_model">simple.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ③ Pod-meni koji poziva prethodni action -->
    <menuitem
        id="menu_simple_records"
        name="Simple Records"
        parent="menu_simple_root"
        action="action_simple_model"
        sequence="10"/>
        <!-- LIST (formerly “tree”) VIEW -->
    <record id="view_simple_model_list" model="ir.ui.view">
        <field name="name">simple.model.list</field>
        <field name="model">simple.model</field>
        <field name="arch" type="xml">
            <list string="Simple Records">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <!-- FORM VIEW -->
    <record id="view_simple_model_form" model="ir.ui.view">
        <field name="name">simple.model.form</field>
        <field name="model">simple.model</field>
        <field name="arch" type="xml">
            <form string="Simple Record">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
